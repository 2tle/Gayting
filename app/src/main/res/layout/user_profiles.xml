<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <!--
        <variable
            name="profile"
            -->
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:id="@+id/userGenderCard"
            android:layout_width="300dp"
            android:layout_height="350dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_youngman"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/userName"
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="userName"
                    android:textSize="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/userGenderCard">
            <TextView
                android:id="@+id/userJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userJob"/>

            <TextView
                android:id="@+id/userPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userJob"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userEmail"/>

            <TextView
                android:id="@+id/userHobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userHobby"/>

            <TextView
                android:id="@+id/userResidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userResidence"/>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>